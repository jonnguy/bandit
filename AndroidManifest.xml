           	android:name=".drumsActivity"
            android:label="@string/app_name">
        </activity>
        <activity
           	android:name=".guitarActivity"
            android:label="@string/app_name">
        </activity>
        <activity
           	android:name=".instrumentslistActivity"
            android:label="@string/app_name">
        </activity>
        <activity
           	android:name=".miscActivity"
            android:label="@string/app_name">
        </activity>
        <activity
           	android:name=".pianoActivity"
            android:label="@string/app_name">
